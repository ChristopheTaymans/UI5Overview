<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="ui5.overview.routing2.controllers.Master"
    xmlns:html="http://www.w3.org/1999/xhtml">

	<Page title="{i18n>MASTER_TITLE}" id="page" showHeader="true">
		<content>
			<Table id="idProductsTable" inset="false" items="{
						path: 'ProductSet>/ProductCollection',
						sorter: {
							path: 'Name'
						}
					}" mode="SingleSelectMaster" updateFinished="_onListUpdateFinished" selectionChange="_onItemPress">
				<headerToolbar>
					<Toolbar>
						<Title text="{i18n>Products}" level="H2" />
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column width="50%">
						<Text text="{i18n>Name}" />
					</Column>
					<Column hAlign="End">
						<Text text="{i18n>ProductId}" />
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{ProductSet>Name}" />
							<Text text="{ProductSet>ProductId}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>